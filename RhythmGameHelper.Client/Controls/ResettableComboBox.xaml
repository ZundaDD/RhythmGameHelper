<UserControl x:Class="RhythmGameHelper.Client.Controls.ResettableComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RhythmGameHelper.Client.Controls"
             mc:Ignorable="d" 
             x:Name="Root">
    <UserControl.Resources>
        <Style x:Key="ResetButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="Cursor" Value="Hand" />
            
           <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="Transparent"
                                CornerRadius="12.5">

                            <Path Data="M0,0 L1,1 M0,1 L1,0" 
                                  Stroke="Gray" 
                                  StrokeThickness="2"
                                  Width="10" Height="10"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#22808080" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedItem, ElementName=Root}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ComboBoxDisablingStyle"
               TargetType="ComboBox"
               BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="IsEnabled" Value="True" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasItems, RelativeSource={RelativeSource Self}}" Value="False">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <ComboBox Grid.Column="0"
                  VerticalAlignment="Center"
                  Style="{StaticResource ComboBoxDisablingStyle}"
                  ItemsSource="{Binding ItemsSource, ElementName=Root}"
                  SelectedItem="{Binding SelectedItem, ElementName=Root, Mode=TwoWay}"
                  DisplayMemberPath="{Binding DisplayMemberPath, ElementName=Root}" />

        <Button Grid.Column="1"
                Margin="5,0,0,0"
                Background="Transparent"
                BorderThickness="0"
                Content="X"
                Style="{StaticResource ResetButtonStyle}"
                Click="ResetButton_Click" />
    </Grid>
</UserControl>
