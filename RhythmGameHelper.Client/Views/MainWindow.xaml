<hc:Window x:Class="RhythmGameHelper.Client.Views.MainWindow" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:local="clr-namespace:RhythmGameHelper.Client"
           xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
           xmlns:hc="https://handyorg.github.io/handycontrol"
           xmlns:mD="http://materialdesigninxaml.net/winfx/xaml/themes"
           xmlns:localControl="clr-namespace:RhythmGameHelper.Client.Controls"
           mc:Ignorable="d"
           Title="音游小助手" 
           Height="800" 
           Width="800" 
           MinWidth="800"
           MinHeight="400"
           WindowStartupLocation="CenterScreen">
    <Grid Margin="10" d:Background="#FF2D2D2D">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ToolBar -->
        <Grid Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,5">
            <Button hc:IconElement.Geometry="{StaticResource SettingIcon}" 
                    x:Name="ConfigButton"
                    Margin="5,5,0,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Command="{Binding OpenSettingCommand}"
                    Style="{StaticResource ButtonIconCircular}"/>
        </Grid>

        <!-- Input -->
        <StackPanel Grid.Row="1">
            <Grid VerticalAlignment="Bottom" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Input Part -->
                <TextBox x:Name="InputTextBox"
                        Grid.Column="0"
                        hc:InfoElement.Placeholder="在这里输入..." 
                        Height="40"
                        FontSize="16"
                        FontFamily="Consolas"
                        Padding="8"
                        AcceptsReturn="False" 
                        TextWrapping="NoWrap" 
                        VerticalContentAlignment="Center"
                        TextAlignment="Left"
                        Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchSongCommand}" />
                    </TextBox.InputBindings>
                </TextBox>

                <Button x:Name="SendButton" 
                        Grid.Column="1"
                        Content="搜索" 
                        Width="65"
                        Margin="5,0,0,0"
                        IsEnabled="{Binding IsNotLoading, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ButtonPrimary}"  
                        Command="{Binding SearchSongCommand}"/>
            </Grid>

            <!-- Senior Option -->
            <Expander Header="高级选项" Margin="5,0,5,0" Style="{StaticResource ExpanderHeightStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="游戏参数"
                                   Foreground="Gray"/>

                        <TextBlock Text="按游戏筛选" 
                                   Margin="10,0,0,0"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Grid.Column="0"
                                   Grid.Row="1"/>

                        <localControl:ResettableComboBox  ItemsSource="{Binding AllGames}"
                                                          SelectedItem="{Binding SelectedGame, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          Margin="0,2,0,2"
                                                          DisplayMemberPath="Name"
                                                          Grid.Column="1"
                                                          Grid.Row="1"/>

                        <TextBlock Text="显示削除乐曲"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   Grid.Column="2"
                                   Grid.Row="1"/>

                        <CheckBox IsChecked="{Binding ShowDeleted}"
                                  Grid.Column="3"
                                  Grid.Row="1" 
                                  Margin="0"
                                  VerticalAlignment="Center"/>

                        <TextBlock Text="显示非原创乐曲" 
                                   Margin="10,0,0,0"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Grid.Column="4"
                                   Grid.Row="1"/>

                        <CheckBox IsChecked="{Binding ShowNotOriginal}"
                                  Grid.Column="5"
                                  Grid.Row="1"
                                  Margin="0"
                                  VerticalAlignment="Center"/>

                        <TextBlock Text="按乐曲分类筛选"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   Grid.Column="0"
                                   Grid.Row="2"/>

                        <localControl:ResettableComboBox  ItemsSource="{Binding Categories}"
                                                          SelectedItem="{Binding SelectedCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          Padding="0,2,0,2"
                                                          Grid.Column="1"
                                                          Grid.Row="2"/>

                        <TextBlock Text="按乐曲版本筛选"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   Grid.Column="2"
                                   Grid.Row="2"/>

                        <localControl:ResettableComboBox  ItemsSource="{Binding Versions}"
                                                          SelectedItem="{Binding SelectedVersion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          Padding="0,2,0,2"
                                                          Grid.Column="3"
                                                          Grid.Row="2"/>

                        <TextBlock Grid.Row="3"
                                   Grid.Column="0"
                                   Text="乐曲参数"
                                   Foreground="Gray"/>

                        <TextBlock Text="BPM下限" 
                                   Margin="10,0,0,0"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Grid.Column="0"
                                   Grid.Row="4"/>

                        <mD:NumericUpDown Value="{Binding MinBPM, UpdateSourceTrigger=PropertyChanged}"
                                          Grid.Column="1"
                                          Grid.Row="4"
                                          Minimum="0"
                                          Maximum="99999"
                                          Margin="0,2"/>


                        <TextBlock Text="BPM上限" 
                                   Margin="10,0,0,0"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Grid.Column="2"
                                   Grid.Row="4"/>

                        <mD:NumericUpDown Value="{Binding MaxBPM, UpdateSourceTrigger=PropertyChanged}"
                                          Grid.Column="3"
                                          Grid.Row="4" 
                                          Minimum="0"
                                          Maximum="99999"
                                          Margin="0,2"/>

                        <TextBlock Text="按曲师筛选" 
                                   Margin="10,0,0,0"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Grid.Column="4"
                                   Grid.Row="4"/>

                        <TextBox Text="{Binding SearchArtist}"
                                 Grid.Column="5"
                                 Grid.Row="4"
                                 Margin="0,2">
                        </TextBox>

                    </Grid>
                </ScrollViewer>
            </Expander>

            <!-- Error Part -->
            <Border Background="#55FF0000" CornerRadius="3" Margin="5,5"
                Padding="10">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ErrorText}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ErrorText}" Value="">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                       Text="{Binding ErrorText}" 
                       Foreground="White"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                        Content="×"
                        Command="{Binding ClearErrorCommand}"
                        VerticalAlignment="Top"
                        Margin="5,0,0,0"
                        Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" Padding="5,0">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#33FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Items Displayer-->
        <ListBox ItemsSource="{Binding SearchResults}"
                 Grid.Row="2"
                 Margin="5,5,0,5"
                 Background="Transparent" HorizontalAlignment="Left" Width="770">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="0"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                                    <ContentPresenter />
                                </Border>

                                <!-- Interact -->
                                <ControlTemplate.Triggers>
                                    <!-- Hover -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF" />
                                    </Trigger>
                                    <!-- Select -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#44FFFFFF" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#666" Background="LightGray" BorderThickness="1" Padding="8" Margin="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding SongName}" FontSize="16" Foreground="Black" FontWeight="Bold"/>
                                <TextBlock Text="{Binding OfficialBPM, StringFormat='BPM: {0}'}" FontSize="10" Foreground="DarkRed" Margin="0,4,0,0"/>

                                <TextBlock Text="{Binding OfficialArtist}" FontSize="12" Foreground="DarkSlateGray" Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1" VerticalAlignment="Center" 
                                Command="{Binding ToggleFavoriteCommand}"
                                Style="{StaticResource FavoriteButtonStyle}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Page Part -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,5"
                        Grid.Column="1">
            
                <Button Content="&lt; 上一页"
                        Command="{Binding PreviousPageCommand}" />

                <TextBlock Margin="10,0"
                           VerticalAlignment="Center"
                           Foreground="White">
                    <Run Text="页面(" />
                    <Run Text="{Binding CurrentPage}" />
                    <Run Text="/" />
                    <Run Text="{Binding TotalPage}" />
                    <Run Text=")" />
                </TextBlock>

                <Button Content="下一页 &gt;"
                        Command="{Binding NextPageCommand}" />
            </StackPanel>
            
            <TextBlock Margin="0,0,10,5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Foreground="White"
                       Grid.Column="2">
                <Run Text="乐曲数：" />
                <Run Text="{Binding TotalCount}" />
            </TextBlock>
        </Grid>
    </Grid>
</hc:Window>
